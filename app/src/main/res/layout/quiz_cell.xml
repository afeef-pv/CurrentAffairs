<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/quiz_cell_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/quiz_cell_mrgn_lr"
    android:layout_marginRight="@dimen/quiz_cell_mrgn_lr"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qc_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="@dimen/option_box_mb"
                android:text="TextView"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="14sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:layout_below="@+id/toolbar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opt_a"
                android:layout_marginBottom="@dimen/opt_mrg_btm"
                android:layout_marginLeft="@dimen/option_box_margin"
                android:layout_marginRight="@dimen/option_box_margin"
                android:padding="@dimen/option_pad"
                android:text="A. Option A"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/option_a_inset"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_option"
                android:layout_below="@id/qc_question"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opt_b"
                android:layout_marginBottom="@dimen/opt_mrg_btm"
                android:layout_marginLeft="@dimen/option_box_margin"
                android:layout_marginRight="@dimen/option_box_margin"
                android:padding="@dimen/option_pad"
                android:text="B. Option B"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/opiton_b_inset"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_option"
                android:layout_below="@id/opt_a"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opt_c"
                android:layout_marginBottom="@dimen/opt_mrg_btm"
                android:layout_marginLeft="@dimen/option_box_margin"
                android:layout_marginRight="@dimen/option_box_margin"
                android:padding="@dimen/option_pad"
                android:text="C. Option C"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/option_c_inset"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_option"
                android:layout_below="@id/opt_b"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opt_d"
                android:layout_marginBottom="@dimen/opt_mrg_btm"
                android:layout_marginLeft="@dimen/option_box_margin"
                android:layout_marginRight="@dimen/option_box_margin"
                android:padding="@dimen/option_pad"
                android:text="D. Option D"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/option_d_inset"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_option"
                android:layout_below="@id/opt_c"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opt_e"
                android:layout_marginBottom="@dimen/opt_mrg_btm"
                android:layout_marginLeft="@dimen/option_box_margin"
                android:layout_marginRight="@dimen/option_box_margin"
                android:padding="@dimen/option_pad"
                android:text="E. Option E"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/option_e_inset"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_option"
                android:layout_below="@id/opt_d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note: "
                android:id="@+id/extra"
                android:layout_below="@id/opt_e"
                android:layout_marginLeft="@dimen/option_box_margin"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note: "
                android:id="@+id/extra_notes"
                android:layout_below="@id/extra"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="14dp"
                android:visibility="gone"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>